{
  "name": "runcmf/runbb-ext-markitup",
  "description": "MarkItUp Markdown editor and elFinder file manager for RunBB forum extension",
  "license": "Apache-2.0",
  "type": "library",
  "keywords": [
    "RunCMF",
    "RunBB",
    "Slim3",
    "Slim 3",
    "markitup",
    "elFinder",
    "plugin"
  ],
  "authors": [
    {
      "name": "Vladimir",
      "email": "1f7.wizard@gmail.com",
      "homepage": "http://runcmf.ru"
    }
  ],
  "require": {
    "runcmf/runbb": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5",
    "phpunit/phpunit": "~5.7"
  },
  "autoload": {
    "psr-4": {
      "RunMarkItup\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "php vendor/bin/phpunit",
    "phpcs": "php vendor/bin/phpcs"
  }
}
